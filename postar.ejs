<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/css/bootstrap-select.css" />
    <style>
        body {
            overflow-x: hidden;
        }
        .sideNav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            background-color: lightgrey;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
        }
        .sideNav a:hover {
            color: #ffffff;
            background-color: #999999;
        }
        .sideNav .closebtn {
            position: absolute;
            top: 2%;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
            cursor: pointer;
            transition: 0.5s;
        }
        .cat {
            position: absolute;
            top: 0;
            margin-left: 30%;
            font-size: 130%;
        }
        #main {
            transition: margin-left .5s;
            margin-left: 10px;
            margin-right: 10px; 
        }
        .pad {
            margin-left: 5%;
        }
        .form {
            margin-top: 0.5%;
        }
        @media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }
            .sidenav a {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <div id="main">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!--<a class="navbar-brand">SaveGames</a>-->
                <span class="navbar-brand"><a class="btn btn-outline-secondary" href="/" role="button">SaveGames</a></span>
                <div class="dropdown">
                    <button type="button" class="btn btn-dark dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <% if(usersname === null) { %>
                            <%= 'Area do usuario' %>
                        <% } else { %>
                            <%= usersname %>
                            <% } %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" id="loginbtn" href="/login">
                            <% if(usersname === null) { %>
                                <%= 'Login' %>
                            <% } else { %>
                                <%= 'Ja esta logado' %>
                                <% } %>
                        </a></li>
                        <li><form action="/logout?_method=DELETE" method="POST"><button class="dropdown-item" id="logoutbtn" type="submit">Sair</button></form></li>
                    </ul>
                </div>
            </div>
        </nav>
        <form action="/posts" method="POST" class="form" id="formm">
            <div>
                <label for="title">Nome do savegame</label>
                <input type="text" name="title" placeholder="Nome do save" required>
            </div>
            <div>
                <label for="desc">Descricao</label>
                <input type="text" name="desc" placeholder="Descricao" required>
            </div>
            <div>
                <label for="url">URL</label>
                <input type="text" name="url" placeholder="Endereco do site onde esta o savegame" required>
            </div>
            <div>
                <label for="game">Nome do jogo</label>
                <input type="text" name="game" placeholder="Insira o nome do jogo aqui caso nao encontrar na lista." id="inputGame" style="width:40rem;">
            </div>
            <% if(typeof message !== 'undefined') { %>
                <div id="message"><%= message %></div>
            <% } %>
            <button class="btn btn-primary">Enviar save</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/js/bootstrap-select.js"></script>
    <script>
        if($("#navbarDropdown").width() < 160) {
            $("#navbarDropdown").css({'width': '160px'});
        }        
        if($("#loginbtn").html().indexOf("esta") >= 0) {
            $("#loginbtn").addClass('disabled')
        } else {
            $("#logoutbtn").hide();
        }

    </script>
</body>
</html>